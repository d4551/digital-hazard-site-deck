    <!-- HUD Elements -->
    <!-- Combo Counter -->
    <div class="fixed top-1/2 right-4 sm:right-20 lg:right-4 transform -translate-y-1/2 opacity-0 transition-all duration-500 hidden sm:block scale-95 combo-counter" id="comboCounter" role="status" aria-live="polite" aria-label="Combo counter">
        <div class="card bg-primary text-primary-content shadow-2xl border-2 border-primary-focus p-4 sm:p-5 w-24 sm:w-28 lg:w-32 hover:scale-105 transition-transform duration-300">
            <div class="card-body items-center text-center gap-2 p-0">
