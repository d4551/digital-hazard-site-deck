                <div class="text-xs sm:text-sm uppercase font-semibold tracking-wider">COMBO</div>
                <div class="badge badge-sm badge-ghost badge-outline text-xs" id="comboMultiplier" aria-label="Combo multiplier">&times;1.0</div>
            </div>
        </div>
    </div>

    <!-- Score Popup -->
    <div class="fixed pointer-events-none opacity-0 scale-0 transition-all duration-300" id="scorePopup" role="status" aria-live="polite" aria-atomic="true" class="score-popup">
        <div class="badge badge-success badge-md sm:badge-lg">
            <span id="scoreNumber" class="text-sm sm:text-base">+100</span>
        </div>
    </div>

    <!-- Modals and Dialogs -->
    <!-- Game Over Modal -->
    <dialog id="gameOverModal" class="modal" role="dialog" aria-labelledby="gameOverTitle" aria-modal="true">
        <div class="modal-box bg-base-100 border-2 border-error/50 shadow-2xl max-w-md">
            <h3 class="font-bold text-3xl text-error mb-4 flex items-center gap-2" id="gameOverTitle">
                <i class="fas fa-skull" aria-hidden="true"></i>
                GAME OVER
            </h3>
            <div class="space-y-4">
                <div class="stats stats-vertical sm:stats-horizontal shadow w-full">
                    <div class="stat">
                        <div class="stat-title text-base-content/70">Final Score</div>
                        <div class="stat-value text-primary" id="gameOverScore">0</div>
                    </div>
                    <div class="stat">
                        <div class="stat-title text-base-content/70">Level Reached</div>
                        <div class="stat-value text-accent" id="gameOverLevel">1</div>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="flex gap-2 justify-center">
                    <button class="btn btn-primary btn-lg" onclick="if(window.survivalGame) window.survivalGame.restartGame();" aria-label="Play Again">
                        <i class="fas fa-redo mr-2" aria-hidden="true"></i>
                        Play Again
                    </button>
                    <form method="dialog">
                        <button class="btn btn-ghost btn-lg" aria-label="Close">Close</button>
                    </form>
    </div>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button aria-label="Close game over modal">close</button>
        </form>
    </dialog>

