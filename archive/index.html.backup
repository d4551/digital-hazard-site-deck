    <!-- Unified Game Initialization -->
    <script>
        (function() {
            'use strict';
            
            /**
             * Unified game initialization for both index.html and present.html
             * Handles modal opening, game loading, and error states
             */
            window.initGameSystem = function() {
                console.log('[GameInit] Initializing unified game system...' );
                
                // Check if game modal exists
                const gameModal = document.getElementById('gameModal');
                if (!gameModal) {
                    console.error('[GameInit] Game modal not found');
                    return;
                }
                
                // Check if demo canvas exists
                const demoCanvas = document.getElementById('demo-canvas');
                if (!demoCanvas) {
                    console.error('[GameInit] Demo canvas not found');
                    return;
                }
                
                // Game loading states
                const loadingOverlay = document.getElementById('gameLoadingOverlay');
                const errorOverlay = document.getElementById('gameErrorOverlay');
                const clickHint = document.getElementById('gameClickHint');
                const loadingSpinner = document.getElementById('gameLoadingSpinner');
                const errorMsg = document.getElementById('gameErrorMsg');
                
                // Function to show loading state
                function showLoading(message = 'Loading game...') {
                    if (loadingOverlay) {
                        loadingOverlay.style.opacity = '1';
                        loadingOverlay.style.pointerEvents = 'auto';
                    }
                    if (loadingSpinner) loadingSpinner.classList.remove('opacity-0');
                    if (errorOverlay) errorOverlay.style.opacity = '0';
                    console.log('[GameInit]', message);
                }
                
                // Function to show error state
                function showError(message) {
                    if (errorOverlay) errorOverlay.style.opacity = '1';
                    if (errorMsg) errorMsg.textContent = message;
                    if (loadingOverlay) loadingOverlay.style.opacity = '0';
                    if (loadingSpinner) loadingSpinner.classList.add('opacity-0');
                    console.error('[GameInit] Error:', message);
                }
                
                // Function to hide loading
                function hideLoading() {
                    if (loadingOverlay) {
                        loadingOverlay.style.opacity = '0';
                        loadingOverlay.style.pointerEvents = 'none';
                    }
                    if (loadingSpinner) loadingSpinner.classList.add('opacity-0');
                    if (errorOverlay) errorOverlay.style.opacity = '0';
                }
                
                // Function to start game
                function startGame() {
                    console.log('[GameInit] Starting game...' );
                    
                    // Check if SurvivalGame is available
                    if (typeof window.SurvivalGame === 'undefined') {
                        showError('Game engine not loaded. Please refresh the page.');
                        return;
                    }
                    
                    try {
                        // Create game instance
                        window.survivalGame = new window.SurvivalGame('demo-canvas');
                        
                        // Start the game
                        if (window.survivalGame && typeof window.survivalGame.startGame === 'function') {
                            window.survivalGame.startGame();
                            hideLoading();
                            
                            // Hide click hint after game starts
                            if (clickHint) {
                                clickHint.style.opacity = '0';
                                clickHint.style.pointerEvents = 'none';
                            }
                            
                            console.log('[GameInit] Game started successfully');
                        } else {
                            throw new Error('Game start method not available');
                        }
                    } catch (error) {
                        showError(`Failed to start game: ${error.message}`);
                    }
                }
                
                // Modal open handler
                gameModal.addEventListener('show', () => {
                    console.log('[GameInit] Game modal opened');
                    showLoading('Initializing game...' );
                    
                    // Check if game modules are loaded
                    if (typeof window.SurvivalGame !== 'undefined') {
                        // Game modules are already loaded, start immediately
                        setTimeout(startGame, 500);
                    } else {
                        // Wait for game modules to load
                        showLoading('Loading game modules...' );
                        
                        let attempts = 0;
                        const maxAttempts = 50; // 5 seconds max wait
                        
                        const checkModules = () => {
                            attempts++;
                            
                            if (typeof window.SurvivalGame !== 'undefined') {
                                console.log('[GameInit] Game modules loaded');
                                startGame();
                            } else if (attempts >= maxAttempts) {
                                showError('Game modules failed to load. Please refresh the page.');
                            } else {
                                setTimeout(checkModules, 100);
                            }
                        };
                        
                        checkModules();
                    }
                });
                
                // Modal close handler
                gameModal.addEventListener('close', () => {
                    console.log('[GameInit] Game modal closed');
                    hideLoading();
                    
                    // Dispose game instance
                    if (window.survivalGame && typeof window.survivalGame.dispose === 'function') {
                        window.survivalGame.dispose();
                        window.survivalGame = null;
                    }
                });
                
                console.log('[GameInit] Game system initialized');
            };
            
            // Initialize when DOM is ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', window.initGameSystem);
            } else {
                window.initGameSystem();
            }
            
            // Also initialize when DHInit is ready (for present.html)
            window.addEventListener('DHInitReady', () => {
                if (!window.gameSystemInitialized) {
                    window.initGameSystem();
                    window.gameSystemInitialized = true;
                }
            });
            
        })();
    </script>
