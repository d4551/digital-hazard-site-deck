    <style type="text/tailwindcss">
        @theme {
            --color-primary: #f97316;
            --color-secondary: #38bdf8;
            --color-accent: #facc15;
            --font-display: 'Rajdhani', 'Inter', system-ui, sans-serif;
            --font-body: 'Inter', system-ui, sans-serif;
        }

        :root {
            --z-background: -20;
            --z-gradient: -10;
            --z-loading: 60;
            --z-navbar: 50;
            --z-hud: 40;
            --layout-max: 90rem;
            --section-gap: clamp(4rem, 10vw, 6.5rem);
            --card-backdrop: color-mix(in srgb, hsl(var(--b2)) 78%, transparent);
        }

        @layer base {
            html {
                color-scheme: dark;
            }
            body {
                min-height: 100vh;
                font-family: var(--font-body);
                background-color: hsl(var(--b1));
                color: hsl(var(--bc));
            }
            body.dh-body {
                font-family: var(--font-body);
            }
            h1, h2, h3, h4, h5, h6, .font-display {
                font-family: var(--font-display);
                letter-spacing: 0.04em;
            }
            [data-theme="hazard"] {
                --p: 24 94% 55%;
                --pc: 0 0% 100%;
                --pf: 24 95% 46%;
                --s: 199 94% 62%;
                --sc: 199 100% 12%;
                --sf: 199 94% 54%;
                --a: 48 95% 64%;
                --ac: 48 98% 16%;
                --af: 48 96% 55%;
                --n: 219 45% 14%;
                --nc: 213 32% 88%;
                --nf: 219 45% 10%;
                --b1: 222 47% 10%;
                --b2: 222 47% 8%;
                --b3: 222 47% 6%;
                --bc: 213 32% 90%;
                --in: 199 90% 60%;
                --inc: 199 100% 10%;
                --su: 142 71% 45%;
                --suc: 142 100% 12%;
                --wa: 45 95% 63%;
                --wac: 45 100% 18%;
                --er: 9 92% 61%;
                --erc: 9 100% 15%;
            }
        }

        @layer components {
            .section-spacing {
                padding-block: var(--section-gap);
            }
            .section-content {
                width: min(100%, var(--layout-max));
                margin-inline: auto;
                padding-inline: clamp(1.25rem, 5vw, 3.5rem);
            }
            .section-title {
                font-family: var(--font-display);
                font-weight: 700;
                font-size: clamp(2.5rem, 6vw, 3.75rem);
                line-height: 1.1;
                letter-spacing: -0.02em;
                text-align: center;
                margin-bottom: clamp(1.75rem, 4vw, 2.5rem);
                background-image: linear-gradient(90deg, color-mix(in srgb, hsl(var(--p)) 90%, transparent), color-mix(in srgb, hsl(var(--s)) 80%, transparent), color-mix(in srgb, hsl(var(--a)) 85%, transparent));
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
            }
            .section-subtitle {
                font-size: clamp(1.25rem, 3vw, 2rem);
                line-height: 1.5;
                text-align: center;
                color: hsl(var(--bc) / 0.78);
                margin-bottom: clamp(1.25rem, 3vw, 2rem);
            }
            .section-description {
                max-width: 60ch;
                margin-inline: auto;
                font-size: clamp(1rem, 2.4vw, 1.125rem);
                color: hsl(var(--bc) / 0.72);
            }
            .section-grid {
                display: grid;
                gap: clamp(1.5rem, 3vw, 2.75rem);
            }
            .section-scroll-in {
                scroll-margin-top: clamp(5rem, 12vw, 6.5rem);
            }
            .dh-section {
                position: relative;
                isolation: isolate;
            }
            .dh-card {
                background-color: var(--card-backdrop);
                backdrop-filter: blur(22px);
                border-radius: 1.5rem;
                border: 1px solid hsl(var(--p) / 0.2);
                box-shadow: 0 30px 60px -35px color-mix(in srgb, hsl(var(--p)) 35%, transparent);
            }
            .hud-card {
                background-color: color-mix(in srgb, hsl(var(--b1)) 88%, transparent);
                border: 1px solid hsl(var(--p) / 0.25);
            }
        }

        @layer utilities {
            .z-background { z-index: var(--z-background); }
            .z-loading { z-index: var(--z-loading); }
            .hud-layer { z-index: var(--z-hud); }
            .dh-gradient {
                position: fixed;
                inset: 0;
                pointer-events: none;
                background:
                    radial-gradient(60% 75% at 20% 20%, color-mix(in srgb, hsl(var(--p)) 45%, transparent) 0%, transparent 70%),
                    radial-gradient(50% 60% at 80% 30%, color-mix(in srgb, hsl(var(--s)) 40%, transparent) 0%, transparent 75%),
                    radial-gradient(70% 80% at 50% 80%, color-mix(in srgb, hsl(var(--a)) 35%, transparent) 0%, transparent 85%);
                opacity: 0.45;
                z-index: var(--z-gradient);
            }
            .glass-panel {
                backdrop-filter: blur(20px);
                background-color: color-mix(in srgb, hsl(var(--b2)) 70%, transparent);
            }
            .hud-card {
                background-color: color-mix(in srgb, hsl(var(--b1)) 85%, transparent);
                box-shadow: 0 20px 50px -25px color-mix(in srgb, hsl(var(--p)) 35%, transparent);
            }
            .panel-blur {
                background-color: var(--card-backdrop);
                backdrop-filter: blur(24px);
                border-radius: 1.25rem;
                box-shadow: 0 24px 48px -28px color-mix(in srgb, hsl(var(--p)) 32%, transparent);
            }
            .skip-link {
                position: absolute;
                width: 1px;
                height: 1px;
                padding: 0;
                margin: -1px;
                overflow: hidden;
                clip: rect(0, 0, 0, 0);
                white-space: nowrap;
                border: 0;
            }
            .skip-link:focus {
                position: fixed;
                width: auto;
                height: auto;
                clip: auto;
            }
            .text-gradient {
                background-image: linear-gradient(90deg, color-mix(in srgb, hsl(var(--p)) 90%, transparent), color-mix(in srgb, hsl(var(--s)) 80%, transparent), color-mix(in srgb, hsl(var(--a)) 85%, transparent));
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
            }
            .neon-text {
                text-shadow:
                    0 0 12px color-mix(in srgb, hsl(var(--p)) 60%, transparent),
                    0 0 30px color-mix(in srgb, hsl(var(--s)) 45%, transparent);
            }
            .interactive-badge {
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                box-shadow: 0 24px 50px -25px color-mix(in srgb, hsl(var(--p)) 40%, transparent);
            }
            .interactive-badge:focus-visible {
                outline: 2px solid hsl(var(--p));
                outline-offset: 4px;
                transform: translateY(-2px);
            }
            .scanlines::before {
                content: "";
                position: absolute;
                inset: 0;
                pointer-events: none;
                background-image: repeating-linear-gradient(transparent 0, transparent 2px, rgba(255,255,255,0.04) 2px, rgba(255,255,255,0.04) 4px);
                mix-blend-mode: soft-light;
                opacity: 0.25;
            }
            .crt {
                position: relative;
            }
            .crt::after {
                content: "";
                position: absolute;
                inset: 0;
                pointer-events: none;
                background: radial-gradient(circle at 50% 0%, rgba(255, 255, 255, 0.12), transparent 65%);
                mix-blend-mode: screen;
                opacity: 0.4;
            }
            .loading-screen {
                background: color-mix(in srgb, hsl(var(--b1)) 88%, transparent);
            }
            .combo-counter {
                filter: drop-shadow(0 12px 25px color-mix(in srgb, hsl(var(--p)) 40%, transparent));
            }
            .score-popup {
                filter: drop-shadow(0 12px 32px color-mix(in srgb, hsl(var(--s)) 40%, transparent));
            }
            .dh-grid-auto {
                display: grid;
                gap: clamp(1.75rem, 4vw, 2.75rem);
                grid-template-columns: repeat(auto-fit, minmax(min(100%, 18rem), 1fr));
            }
            .badge-soft {
                backdrop-filter: blur(14px);
                background-color: color-mix(in srgb, hsl(var(--b3)) 70%, transparent);
                border: 1px solid hsl(var(--p) / 0.18);
            }
            .panel-blur {
                background-color: color-mix(in srgb, hsl(var(--b1)) 82%, transparent);
                border: 1px solid hsl(var(--s) / 0.25);
                backdrop-filter: blur(24px);
            }
        }
    </style>
</head>
